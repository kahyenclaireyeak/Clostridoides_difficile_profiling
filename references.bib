	keywords = {shellfish, high hydrostatic pressure, clams, postharvest treatment, Vibrio parahaemolyticus},
	pages = {E251--E257},
	file = {Full Text PDF:C\:\\Users\\A806702\\Zotero\\storage\\STWQPCRB\\Mootian et al. - 2013 - Inactivation of Vibrio parahaemolyticus in Hard Cl.pdf:application/pdf},
}

