@article{lang_caco-2_2017,
	title = {Caco-2 {Invasion} by {Cronobacter} sakazakii and {Salmonella} enterica {Exposed} to {Drying} and {Heat} {Treatments} in {Dried} {State} in {Milk} {Powder}},
