	author = {Rupnik, Maja and Wilcox, Mark H. and Gerding, Dale N.},
	month = jul,
	year = {2009},
	note = {Publisher: Nature Publishing Group},
	keywords = {general, Infectious Diseases, Life Sciences, Medical Microbiology, Microbiology, Parasitology, Virology},
