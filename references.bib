	keywords = {molecular evolution, synthetic biology, biodegradation, Metabolic engineering, serendipitous pathway},
	pages = {E2856--E2864},
	file = {Full Text PDF:C\:\\Users\\A806702\\Zotero\\storage\\TCI2H5Q3\\Kim and Copley - 2012 - Inhibitory cross-talk upon introduction of a new m.pdf:application/pdf;Snapshot:C\:\\Users\\A806702\\Zotero\\storage\\BCESQZCD\\E2856.html:text/html},
}

