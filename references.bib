	keywords = {Humans, Food Contamination, Norovirus, Temperature, Animals, Hydrogen-Ion Concentration, Swine, Water, Hydrostatic Pressure, pH, Human norovirus, Blueberry Plants, Blueberries, Gastric Mucins, Hydrostatic pressure, PGM binding assay},
