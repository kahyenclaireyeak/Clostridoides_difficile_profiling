	title = {The efficacy and safety of high-pressure processing of food},
	volume = {20},
	copyright = {© 2022 European Food Safety Authority. EFSA Journal published by Wiley-VCH GmbH on behalf of European Food Safety Authority.},
	issn = {1831-4732},
