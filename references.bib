	urldate = {2024-01-16},
	journal = {Applied and Environmental Microbiology},
	author = {Lou, Fangfei and Ye, Mu and Ma, Yuanmei and Li, Xinhui and DiCaprio, Erin and Chen, Haiqiang and Krakowka, Steven and Hughes, John and Kingsley, David and Li, Jianrong},
	month = oct,
	year = {2015},
	note = {Publisher: American Society for Microbiology},
	pages = {6679--6687},
	file = {Full Text PDF:C\:\\Users\\A806702\\Zotero\\storage\\3JJGHFRG\\Lou et al. - 2015 - A Gnotobiotic Pig Model for Determining Human Noro.pdf:application/pdf},
}

