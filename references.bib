	author = {Ross, Thomas and Sumner, John},
	month = jul,
	year = {2002},
	pmid = {12076037},
	keywords = {Humans, Food Contamination, Risk Assessment, Models, Biological, Food Microbiology, Foodborne Diseases, Food Handling, Software, Safety},
