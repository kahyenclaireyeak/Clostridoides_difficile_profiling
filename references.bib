	keywords = {Listeria monocytogenes, Bacterial Proteins, Sigma Factor, Transcription, Genetic, Reverse Transcriptase Polymerase Chain Reaction, Computational Biology, RNA, Bacterial, RNA, Untranslated, Sequence Analysis, RNA},
	pages = {641},
}

