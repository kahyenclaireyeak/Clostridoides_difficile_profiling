	urldate = {2023-04-13},
	journal = {Applied and Environmental Microbiology},
	author = {Weingart, Oliver G. and Schreiber, Tanja and Mascher, Conny and Pauly, Diana and Dorner, Martin B. and Berger, Thomas F. H. and Egger, Charlotte and Gessler, Frank and Loessner, Martin J. and Avondet, Marc-Andre and Dorner, Brigitte G.},
	month = may,
	year = {2010},
	pmid = {20363798},
	pmcid = {PMC2869135},
	pages = {3293--3300},
	file = {PubMed Central Full Text PDF:C\:\\Users\\A806702\\Zotero\\storage\\HPA9WC68\\Weingart et al. - 2010 - The Case of Botulinum Toxin in Milk Experimental .pdf:application/pdf},
}

