	number = {4},
	urldate = {2021-11-30},
	journal = {Annals of Microbiology},
	author = {Coronel-León, Jonathan and de Grau, Guillermo and Grau-Campistany, Ariadna and Farfan, Maribel and Rabanal, Francesc and Manresa, Angels and Marqués, Ana María},
