	file = {Full Text PDF:C\:\\Users\\A806702\\Zotero\\storage\\Q77MUB9V\\Eugene V. Koonin et al. - 2001 - Horizontal Gene Transfer in Prokaryotes Quantific.pdf:application/pdf},
