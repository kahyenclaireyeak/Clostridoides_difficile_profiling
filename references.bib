	keywords = {Gene Expression Regulation, Bacterial, Amino Acid Sequence, Escherichia coli, Molecular Sequence Data, Genes, Bacterial, Pyridoxal Kinase, Pyridoxal Phosphate, Amino Acyl-tRNA Synthetases},
	pages = {1814--1821},
}

