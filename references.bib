	author = {{Yrjö H. Roos}},
	year = {2020},
	note = {PubAg AGID: 7059442},
	keywords = {Norovirus, temperature, activation energy, cold, COVID-19 infection, food chain, food preservation, food quality, food storage, hepatitis A, humans, novel foods, pandemic, protein denaturation, relative humidity, Severe acute respiratory syndrome coronavirus 2, traditional foods, virion, viruses},
	pages = {251--267},
	file = {Full Text:C\:\\Users\\A806702\\Zotero\\storage\\3DJANJ7Y\\Yrjö H. Roos - 2020 - Water and Pathogenic Viruses Inactivation—Food Eng.pdf:application/pdf},
