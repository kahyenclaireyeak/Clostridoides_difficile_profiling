	number = {12},
	journal = {Applied and Environmental Microbiology},
	author = {Dessaux, Charlotte and Pucciarelli, M. Graciela and Guerreiro, Duarte N. and O'Byrne, Conor P. and García-Del Portillo, Francisco},
