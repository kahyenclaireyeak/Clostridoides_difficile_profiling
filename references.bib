	journal = {EFSA Journal},
	author = {European Food Safety Authority {and} European Centre for Disease Prevention {and} Control (EFSA {and} ECDC)},
	year = {2022},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.2903/j.efsa.2022.7666},
	keywords = {Listeria, Campylobacter, Salmonella, zoonoses, foodborne outbreaks, monitoring, parasites},
	pages = {e07666},
	file = {Full Text:C\:\\Users\\A806702\\Zotero\\storage\\6ETY9XDQ\\Authority and European Centre for Disease Prevention and Control - 2022 - The European Union One Health 2021 Zoonoses Report.pdf:application/pdf},
}

