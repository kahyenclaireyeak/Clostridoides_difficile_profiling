	journal = {PLOS Medicine},
	author = {Kirk, Martyn D. and Pires, Sara M. and Black, Robert E. and Caipo, Marisa and Crump, John A. and Devleesschauwer, Brecht and Döpfer, Dörte and Fazil, Aamir and Fischer-Walker, Christa L. and Hald, Tine and Hall, Aron J. and Keddy, Karen H. and Lake, Robin J. and Lanata, Claudio F. and Torgerson, Paul R. and Havelaar, Arie H. and Angulo, Frederick J.},
