	pmid = {26519210},
	keywords = {Bacillus, Biofilms, Surface-Active Agents, Bacillus licheniformis, Culture Media, lichenysin, biosurfactant, Candida albicans, biofilms, adhesion, Methicillin-Resistant Staphylococcus aureus, molasses, production optimization, response surface methodology},
	pages = {99--111},
	file = {Full Text:C\:\\Users\\A806702\\Zotero\\storage\\I4VRXRYZ\\Coronel-León et al. - 2016 - Optimizing the production of the biosurfactant lic.pdf:application/pdf},
