	journal = {Journal of Dairy Science},
	author = {Miller, Rachel A. and Kent, David J. and Watterson, Matthew J. and Boor, Kathryn J. and Martin, Nicole H. and Wiedmann, Martin},
	month = dec,
	year = {2015},
	keywords = {bulk tank raw milk, dairy powders, spore populations},
