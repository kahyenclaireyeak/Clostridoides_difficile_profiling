	urldate = {2024-01-15},
	journal = {Innovative Food Science \& Emerging Technologies},
	author = {Shearer, Adrienne E. H. and Wilkins, Gary C. and Jenkins, Mark C. and Kniel, Kalmia E.},
	month = jun,
