@article{hsu_genomic_2020,
	title = {Genomic {Differences} between {Listeria} monocytogenes {EGDe} {Isolates} {Reveal} {Crucial} {Roles} for {SigB} and {Wall} {Rhamnosylation} in {Biofilm} {Formation}},
