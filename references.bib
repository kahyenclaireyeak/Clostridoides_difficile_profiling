}

@article{tazoe_flavin_2006,
	title = {Flavin {Adenine} {Dinucleotide}-{Dependent} 4-{Phospho}-d-{Erythronate} {Dehydrogenase} {Is} {Responsible} for the 4-{Phosphohydroxy}-l-{Threonine} {Pathway} in {Vitamin} {B6} {Biosynthesis} in {Sinorhizobium} meliloti},
