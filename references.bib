	year = {1995},
	pmid = {7860596},
	pmcid = {PMC176679},
	pages = {883--891},
	file = {PubMed Central Full Text PDF:C\:\\Users\\A806702\\Zotero\\storage\\X8QPPKZM\\Zhao and Winkler - 1995 - Kinetic limitation and cellular amount of pyridoxi.pdf:application/pdf},
}

