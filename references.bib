	file = {PubMed Central Full Text PDF:C\:\\Users\\A806702\\Zotero\\storage\\RB7LRDQ4\\Smith et al. - 2020 - MogR Is a Ubiquitous Transcriptional Repressor Aff.pdf:application/pdf},
