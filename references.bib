	journal = {BMC genomics},
	author = {Oliver, Haley F. and Orsi, Renato H. and Ponnala, Lalit and Keich, Uri and Wang, Wei and Sun, Qi and Cartinhour, Samuel W. and Filiatrault, Melanie J. and Wiedmann, Martin and Boor, Kathryn J.},
