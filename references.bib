	journal = {Microbial Risk Analysis},
	author = {Thébault, Anne and David, Julie and Kooh, Pauline and Cadavez, Vasco and Gonzales-Barron, Ursula and Pavio, Nicole},
	month = apr,
	year = {2021},
	keywords = {Norovirus, Case-control studies, Meta-regression, Research synthesis, Odds-ratio},
