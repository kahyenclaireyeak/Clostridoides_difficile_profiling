@article{nicolas_condition-dependent_2012-1,
	title = {Condition-dependent transcriptome reveals high-level regulatory architecture in {Bacillus} subtilis},
	volume = {335},
	issn = {1095-9203},
	doi = {10.1126/science.1206848},
	abstract = {Bacteria adapt to environmental stimuli by adjusting their transcriptomes in a complex manner, the full potential of which has yet to be established for any individual bacterial species. Here, we report the transcriptomes of Bacillus subtilis exposed to a wide range of environmental and nutritional conditions that the organism might encounter in nature. We comprehensively mapped transcription units (TUs) and grouped 2935 promoters into regulons controlled by various RNA polymerase sigma factors, accounting for {\textasciitilde}66\% of the observed variance in transcriptional activity. This global classification of promoters and detailed description of TUs revealed that a large proportion of the detected antisense RNAs arose from potentially spurious transcription initiation by alternative sigma factors and from imperfect control of transcription termination.},
