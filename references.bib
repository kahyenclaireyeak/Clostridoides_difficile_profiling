	urldate = {2022-11-04},
	journal = {PLOS ONE},
	author = {Hald, Tine and Aspinall, Willy and Devleesschauwer, Brecht and Cooke, Roger and Corrigan, Tim and Havelaar, Arie H. and Gibb, Herman J. and Torgerson, Paul R. and Kirk, Martyn D. and Angulo, Fred J. and Lake, Robin J. and Speybroeck, Niko and Hoffmann, Sandra},
	month = jan,
