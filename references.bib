	file = {PubMed Central Full Text PDF:C\:\\Users\\A806702\\Zotero\\storage\\C4FBZT6W\\Kazmierczak et al. - 2003 - Listeria monocytogenes σB Regulates Stress Respons.pdf:application/pdf},
}

